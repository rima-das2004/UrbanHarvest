<% layout('layouts/boilerplate') -%>
<body>

    <div class="container">
  
        <div class="breadcrumb mt-3">
            <a href="/product">Home</a> / <a href="/product/all">All products</a> / Product Title
        </div>
        <div class="row mt-4 overflow-hidden">
            <div class="col-md-4">
              <div class="largeImg" style="overflow: hidden;">
                <img src="<%=product. image[0].url %>" alt="Broccolli" class="img-fluid main-img" style="width: 100%;">
              </div>
               
                
                <div class="d-flex mt-3  small-product p-0" style="height: fit-content;">
                  <% for( let img of product.image) { %>
                    <div class="s-img d-flex img-thumbnail" style="width: 10rem; height:7rem; justify-content:center; align-items:center; overflow:hidden;">
                      <img src="<%= img.url %>" alt="Broccolli" class="w-100">
                    </div>
                    
                  <% } %>
                    
                </div>
            </div>
            <div class="col-md-6 mb-4 ml-5 description overflow-hidden">
                <div class="mb-3">
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-fill text-warning"></i>
                    <i class="bi bi-star-half text-warning"></i>
                    <span class="ms-2">4.5 (120 reviews)</span>
                </div>
                <h2 class="product-title"><%= product.name %></h2>
                
                <p>Available: <span class="text-success">In stock</span></p>
                <div class="product-options">
                  <p><%= product.quantity %> <%= product.unit %></p>
                </div>
                <p class="product-description mt-3">
                    <%= product.info %>
                </p>
                <p class="product-price">₹<%= product.price %> per <%= product.unit %> <span class="mrp-price">₹<%= product.price+100 %></span></p>
                <div class="mb-4">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <input type="number" class="form-control" id="quantity" value="1" min="1" style="width: 80px;">
                </div>
                <button class="btn btn-primary cart-btn"><i class="fa-solid fa-cart-shopping cart"></i>Add to Cart</button>
                <button class="btn btn-success order-btn"><i class="fas fa-check order"></i>Order Now</button>
            </div>
        </div>
        <div class="container text-center mt-3 mb-4">
            <div class="row">
              <div class="col">
                <div class="guarantee-section">
                    <h5>Lowest Price Guaranteed</h5>
                    <p>100% Fresh Quality Product</p>
                </div>
              </div>
              <div class="col">
                <div class="returns-section">
                    <h5>Easy Returns & Refunds</h5>
                    <p>Return products at doorstep and get refund in seconds</p>
                </div>
              </div>
              <div class="col">
                <div class="returns-section">
                    <h5>Buy More Save More</h5>
                    <p>Amazing discounts on high quality products</p>
                </div>
              </div>
            </div>
        </div>
        
        <!-- card section -->
        <h2 class="product-title mb-4">Top Featured Products</h2>
        <div class="row">
           
              <% for( let p of products ) { %>
                <% if (product.category==p.category) { %>
                  <div class="col-sm-4 mb-3">
                  <div class="card" style="width: 20rem;">
                    
                    <div class="wishlist"><i class="fa-regular fa-heart"></i></div>
                    <a href="/product/details/<%= p._id %>">
                    <div class="cProImg d-flex overflow-hidden" style="width:20rem; height:15rem;">
                      <img src="<%= p.image[0].url %>" class="card-img-top image w-100" alt="Broccolli">
                    </div>
                  </a>
                    <div class="discount-label">6% OFF</div>
                    <div class="card-body">
                      <p>Available: <span class="text-success"><%= p.quantity %> <%= p.unit %></span></p>
                      <h5 class="card-title"><%=p.name%></h5>
                      <p class="product-price cart-product">₹<%= p.price %> <span class="mrp-price">₹<%= p.price+100 %></span></p>
                      <a href="#" class="btn btn-sm btn-outline-success shop-btn">Shop Now</a>
                      <i class="bi bi-cart3 cart-icon"></i> 
                    </div>
                  </div>
                </div>
                <% } %>
              
              <% } %>

            
          
          </div>
    </div>
    <!-- Footer -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

