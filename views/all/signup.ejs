  <body>

<!-- Section: Design Block -->
<%- include("../includes/flash.ejs") %>
<section class="text-center text-lg-start">
    <style>
      .cascading-right {
        margin-right: -50px;
      }
  
      @media (max-width: 991.98px) {
        .cascading-right {
          margin-right: -50px;
        }
      }
    </style>
  
    <!-- Jumbotron -->
    <div class="container py-4" style="max-width: 960px;">
      <div class="row g-0 align-items-center justify-content-center">
        <div class="col-lg-6 col-md-6 col-sm-12 mb-5 mb-lg-0">
          <div class="card cascading-right" style="position:relative; left:30px; top:10px;">
            <div class="card-body p-5" style="background-color: rgba(0,0,0,0.1);">
              <h2 class="fw-bold mb-3 text-center" style="color: #d8363a;">Sign up now</h2>
              <p class="mb-5 text-center">Create your new account</p>
              <form class="needs-validation" action="/signup?role=<%= role %>" method="post" novalidate>
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div data-mdb-input-init class="form-outline">
                      <label class="form-label" for="first name">First name</label>
                      <input type="text" id="firstname" class="form-control" placeholder="First name" name="user[firstname]" required/>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                       Please enter name
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
                    <div data-mdb-input-init class="form-outline">
                      <label class="form-label" for="last name">Last name</label>
                      <input type="text" id="lastname" name="user[lastname]" class="form-control" placeholder="Last name" />
                  
                    </div>
                  </div>
                </div>
              <!-- user input -->
              <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="user">Username</label>
                <input type="user" id="user" class="form-control" name="user[username]" placeholder="Create user name"  required>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Username should be valid
                </div>
              </div>
                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="email">Email address</label>
                  <input type="email" id="email" class="form-control" name="user[email]" placeholder="Email address"  required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Email should be valid
                  </div>
                </div>
  
                <!-- phone number -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="phone">Phone No.</label>
                  <input type="phone" id="phone" class="form-control" name="user[phone]" placeholder="Enter valid phone number"  required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Username should be valid
                  </div>
                </div>
                <!-- Password input -->
               
  
                <!-- Submit button -->
                <button id="signup" type="submit" data-mdb-button-init data-mdb-ripple-init  class="btn btn-outline-danger mb-3">
                  Sign up
                </button>
                
                <!-- Register buttons -->
                <div class="text-center">
                 <a href="/loginRole"> <p>Already have Account?</p></a>
                
                </div>
              </form>
            </div>
          </div>
        </div>
  
        <div class="col-lg-6 col-md-6 d-none d-md-block mb-5 mb-lg-0">
          <img src="img/img-3-sign-up.png" class="w-100 rounded-4 shadow-4" style="height: 45rem;" alt="" />
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>
